<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-address</name>
        <value>hadoop:9000</value>
    </property>
        <property>
        <name>dfs.namenode.http-address</name>
        <value>hadoop:9870</value>
    </property>
    <property>
        <name>dfs.permissions.enabled</name>
        <value>false</value>
    </property>

    <property>
        <name>dfs.datanode.address</name>
        <value>0.0.0.0:9866</value>
    </property>    
    <property>
        <name>dfs.datanode.http-address</name>
        <value>0.0.0.0:9864</value>
    </property>
<!--
    Directorio local donde el Secondary NameNode (o Checkpoint Node) 
    guarda los checkpoints del fsimage y edits del NameNode.
    Si no se configura, usa un directorio temporal bajo /tmp en el sistema local
    <property>
         <name>dfs.namenode.checkpoint.dir</name>
         <value>file:///tmp/hadoop-root/dfs/namesecondary</value>
    </property> -->
</configuration>
