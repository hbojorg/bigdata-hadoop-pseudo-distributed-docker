    </property>
    <property>
        <name>yarn.nodemanager.local-dirs</name>
        <value>/tmp/hadoop-yarn/local</value>
    </property>
    <property>
        <name>yarn.nodemanager.log-dirs</name>
        <value>/tmp/hadoop-yarn/logs</value>
    </property>
</configuration>
